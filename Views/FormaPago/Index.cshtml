@model IEnumerable<Ing_Soft.Models.FormaPago>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="carteles-admin">Formas de Pago</h2>

<p style="text-align: center;">
    <a asp-action="Create">Create New</a>
</p>

<div class="contenedor-tabla-general">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID_FormaPago">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID_FormaPago">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID_FormaPago">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>