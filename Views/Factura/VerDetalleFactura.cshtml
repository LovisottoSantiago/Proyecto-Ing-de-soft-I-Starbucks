@model List<Ing_Soft.Models.DetalleFactura>

@{
    ViewData["Title"] = "Detalle de Factura";
}

<h2>Detalle de Factura</h2>

<table class="table">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio Unitario</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID_ProductoNavigation?.Nombre</td>
                <td>@item.Cantidad</td>
                <td>@item.PrecioUnitario</td>
                <td>@((item.Cantidad * item.PrecioUnitario))</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Volver a Facturas</a>
