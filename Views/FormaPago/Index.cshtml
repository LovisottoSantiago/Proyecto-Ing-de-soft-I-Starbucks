@model IEnumerable<Ing_Soft.Models.FormaPago>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="carteles-admin">Formas de Pago</h2>

<div class="caja-boton-crear">
    <button class="boton-crear">
        <a asp-action="Create">Crear nueva</a>
    </button>
</div>

<div class="contenedor-tabla-general">
    <table class="table-controladores">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    <button class="boton-vuelta">
                        <a asp-action="Edit" asp-route-id="@item.ID_FormaPago">Editar</a> 
                    </button>
                    
                    <button class="boton-vuelta">
                        <a asp-action="Delete" asp-route-id="@item.ID_FormaPago">Dar de baja</a>
                    </button>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>