@model Ing_Soft.Models.Cliente

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="subtitulo-seccion">
    <h3>Are you sure you want to delete this?</h3>
</div>

<div class="subtitulo-delete-details">
    <h4>Cliente</h4>
</div>

<hr />

<div class="contenido-delete-details-vista-admin">
    <dl class="col-md-2">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
    </dl>
</div>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID_Cliente" />
            <div class="boton-delete">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
            
            <div class="caja-boton-vuelta">
                <button class="boton-vuelta">
                    <a asp-action="Index">Back to List</a>
                </button> 
            </div>  
    </form>
</div>
