@model IEnumerable<Ing_Soft.Models.Producto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="carteles-admin">Productos</h2>

<div class="caja-boton-crear">
    <button class="boton-crear">
        <a asp-action="Create">Crear nuevo</a>
    </button>
</div>


<div class="contenedor-tabla-general">
    <div class="tablecontainer">
        <table class="table-controladores">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ID_Producto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PrecioCosto)
                    </th>
                    <th>
                        PrecioVenta
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Stock)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Estado)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ImagenUrl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Categoria)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ID_Proveedor)
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr style="vertical-align: middle;">
                    <td>
                        @Html.DisplayFor(modelItem => item.ID_Producto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrecioCosto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrecioUnitario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Stock)
                    </td>
                    <td>
                        @((item.Estado ?? false) ? "Activo" : "Inactivo")
                    </td>
                    <td style="text-align: center;">
                        @* @Html.DisplayFor(modelItem => item.ImagenUrl) *@
                        <img src="@item.ImagenUrl" alt="Imagen del producto" style="max-height:80px;" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Categoria)
                    </td>            
                    <td>
                        @item.Proveedor?.Nombre
                    </td>            
                    <td>
                        <button class="boton-vuelta boton-opciones-product">
                            <a asp-action="Edit" asp-route-id="@item.ID_Producto">Editar</a>
                        </button>
                        
                        <form asp-action="ToggleEstado" asp-route-id="@item.ID_Producto" method="post" style="display:inline">
                            <button type="submit" class="boton-vuelta boton-opciones-product" style="color: white;">
                                @((item.Estado ?? false) ? "Desactivar" : "Activar")
                            </button>
                        </form>                 
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>

